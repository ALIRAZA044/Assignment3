
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:background="#0097a045">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.AsadJaved.assignment3.guessAnswerFragment"
    tools:showIn="@layout/activity_guess_answer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="20"

        android:textAlignment="center"
        android:id="@+id/mscore"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/mhighscore"
        android:drawableLeft="@drawable/guesshighscore"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_toStartOf="@+id/mname"
        android:layout_above="@+id/answer"
        android:layout_toLeftOf="@+id/mname" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Answer"
        android:id="@+id/answer"
        android:gravity="center"
        android:layout_below="@+id/mscore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/answeremovieimage"
        android:layout_below="@+id/wronganswere"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="movie name"
        android:layout_below="@+id/answeremovieimage"
        android:layout_centerHorizontal="true"
        android:id="@+id/mname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Realease Date"
        android:id="@+id/textView"
        android:layout_below="@+id/mname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/rdate"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/actorsname"
        android:layout_alignStart="@+id/actorsname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actors"
        android:id="@+id/textView4"
        android:layout_below="@+id/rdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/actorsname"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/answeremovieimage"
        android:layout_alignStart="@+id/answeremovieimage" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/wronganswere"
        android:layout_below="@+id/answer"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#00328917" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/textView7"
        android:layout_below="@+id/actorsname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d"
        android:id="@+id/mdescription"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/wronganswere"
        android:layout_alignEnd="@+id/wronganswere" />


</RelativeLayout>
</ScrollView>